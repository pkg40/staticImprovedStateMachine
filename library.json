{
  "name": "staticImprovedStateMachine",
  "version": "2.0.0",
  "description": "A robust, type-safe finite state machine library for embedded systems with core-agnostic interface abstraction, extensive testing and safety features",
  "keywords": [
    "state machine",
    "fsm",
    "menu system",
    "embedded",
    "arduino",
    "platformio",
    "motor control",
    "ui",
    "navigation",
    "interface",
    "abstraction",
    "cross-platform"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pkg40/staticImprovedStateMachine.git"
  },
  "authors": [
    {
      "name": "Peter K Green",
      "email": "pkg40@yahoo.com",
      "maintainer": true
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/pkg40/staticImprovedStateMachine",
  "export": {
    "include": "src"
  },
  "frameworks": [
    "arduino",
    "espidf",
    "native"
  ],
  "platforms": [
    "espressif32",
    "espressif8266",
    "atmelmegaavr",
    "atmelavr",
    "native"
  ],
  "dependencies": {},
  "build": {
    "flags": [
      "-std=c++11",
      "-Wall",
      "-Wextra",
      "-Wpedantic",
      "-Werror=return-type",
      "-Werror=uninitialized"
    ],
    "srcFilter": [
      "+<src/>",
      "-<archive/>",
      "-<test/>",
      "-<example/>"
    ]
  },
  "examples": [
    {
      "name": "Interface Usage (Recommended)",
      "base": "example",
      "files": [
        "interfaceExample.cpp"
      ]
    },
    {
      "name": "Basic Usage",
      "base": "example",
      "files": [
        "basicUsage.cpp"
      ]
    },
    {
      "name": "Motor Controller Config",
      "base": "example", 
      "files": [
        "motorControllerMenuConfig_fixed.cpp"
      ]
    }
  ]
}
